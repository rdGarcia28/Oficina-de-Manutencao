<!DOCTYPE html>
<html>
  <head>
    <title>Oficina_Manutenção</title>
    <%= csrf_meta_tags %>
 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
   
  </head>
 
  <body>
    <div class="header">
      <ul class="menu">
        <li>
            <h1>Oficina de Manutenção</h1>

        
            <% if user_signed_in? %>
               
                </li>
                <li class="menu-item"><%= link_to("Estoque", "/estoques#index") %></li>
                <li class="menu-item"><%= link_to("Ordens de serviço", "/clientes#index") %> </li>

                <li class="menu-item sign-out">
                <%= link_to("Logout", "/users/sign_out", method: :delete) %>
                </li>

            <% else %>
                <li class="menu-item sign-in">
                <%= link_to("Login", "/users/sign_in") %>
                </li>

                <li class="menu-item sign-up">
                <%= link_to("Novo Usuário", "/users/sign_up") %>
            </li>
        <% end %>
      </ul>
 
    </div>
    <div class="main">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>