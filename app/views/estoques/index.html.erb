<p id="notice"><%= notice %></p>

<h1>Estoques</h1>

<table>
  <thead>
    <tr>
      <th>Componente</th>
      <th>Quantidade</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.componente %></td>
        <td><%= estoque.quantidade %></td>
        <td><%= estoque.valor %></td>
        <td><%= link_to 'Exibir', estoque %></td>
        <td><%= link_to 'Editar', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Excluir', estoque, method: :delete, data: { confirm: 'Deseja realmente exlcuir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Item', new_estoque_path %>
